<h1>Signs</h1>
<div class="card-deck">
    <% @signs.each do |sign| %>

    <div class='card'>
    	<%= image_tag(sign.picture_url, class: 'card-img-top') if sign.picture? %>
	<div class='card-block'>
	<h2 class='card-title'><%=sign.name %></h2>
	<%= form_for(sign, class: 'form') do |f| %>
          <%= f.text_field :name %><br>
          <%= f.number_field :relay %><br>
          <%= f.file_field( :picture, value: 'Choose sign picture', accept: 'image/png,image/gif,image/jpeg') %><br>
	  <%= f.submit class: 'btn btn-primary btn-lg' %>
      <% end %>
      </div>
      </div>
    <% end %>
</div>
<br/>
<%= link_to 'Add a sign!', new_sign_path, class: 'btn btn-primary btn-lg active' %>
