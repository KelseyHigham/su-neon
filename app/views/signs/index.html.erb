<div class='col-6'>
  <div class='row'>
    <% @signs.each do |sign| %>
    <div class='w-25 p-3'>
      <%= render partial: 'sign', object: sign %>
    </div>
  <% end %>
  </div>
</div>


<div class='col-6'>
  <form>
    <input name='keyword' type='text'>
  </form>

<table class='table'>
<% @recent_headlines.each do |headline| %>
  <tr>
    <td><%= headline.news_source.name %></td>
    <td><%= link_to headline.headline, headline.link %></td>
  </tr>
<% end %>
</table>
</div>
